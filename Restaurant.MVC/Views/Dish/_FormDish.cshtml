@model DishViewModel

<input asp-for="Id" hidden />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="DishName"></label>
    <input asp-for="DishName" class="form-control" />
    <span asp-validation-for="DishName" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DishType"></label>

    <select asp-for="DishType" asp-items="@ViewBag.Categories" class="form-control">
        <option value="">Select a type of dish...</option>
    </select>

    <span asp-validation-for="DishType" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

