@model DishViewModel

<h1>Delete Dish</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete Dish @Model.DishName ? </h5>
            <form asp-controller="Dish" asp-action="DeleteDish" asp-route-id="@Model.Id">
                <div class="form-group">
                    <input type="submit" value="Yes" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-dark">No</a>
                </div>
            </form>
        </div>
    </div>
</div>