@model IEnumerable<MenuViewModel>

@if (User.IsInRole("Caterer"))
{
    <a asp-controller="Menu" asp-action="Create" class="btn btn-success">New Menu</a>
}


<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Menu Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Menu inserted</td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td class="btn btn-warning">@Html.ActionLink(item.MenuName, "Index", "Dish", new { id = item.Id })</td> 
            </tr>
        }
    </tbody>
</table>
