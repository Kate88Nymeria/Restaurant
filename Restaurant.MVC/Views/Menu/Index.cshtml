@model IEnumerable<MenuViewModel>

@if (User.IsInRole("Caterer"))
{
    <a asp-controller="Menu" asp-action="Create" class="btn btn-success">New Menu</a>
}


<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Menu Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Menu inserted</td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuName</td>
                <td>
                    <a type="button" asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
                @*<td class="btn btn-warning">@Html.ActionLink(item.MenuName, "Details", "Menu", new { id = item.Id })</td>*@
                @*<td class="btn btn-warning">@Html.ActionLink(item.MenuName, "Index", "Dish", new { id = item.Id })</td>*@
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
